@inject ISessionService SessionService
@inject IParticipantService ParticipantService
@inject IUserService UserService

@if (Visible)
{
    <div class="modal-backdrop" @onclick="Close">
        <div class="modal-card" @onclick:stopPropagation>
            <button class="close-button" title="Luk" @onclick="Close" type="button">√ó</button>

            <div class="modal-header">
                <h3>V√¶lg en √•ben session og giv en rating</h3>
            </div>

            <div class="modal-body">
                @if (!string.IsNullOrWhiteSpace(error))
                {
                    <div class="alert-text">@error</div>
                }

                <div class="rating-wrap">
                    <div class="rating-title">Din rating (1‚Äì10)</div>

                    <div class="rating" role="img" aria-label="V√¶lg rating fra 1 til 10">
                        @for (int i = 10; i >= 1; i--)
                        {
                            <input type="radio"
                                   id="star_@i"
                                   name="rating10"
                                   value="@i"
                                   checked="@(selectedRating == i)"
                                   @onchange="() => selectedRating = i" />
                            <label for="star_@i" title="@i stjerner"></label>
                        }
                    </div>

                    <div class="rating-hint">
                        Valgt: @(string.IsNullOrWhiteSpace(selectedSessionName) ? "Ingen" : selectedSessionName)
                    </div>
                </div>

                @if (loading)
                {
                    <div class="muted center">Henter dine √•bne sessioner‚Ä¶</div>
                }
                else if (sessions.Count == 0)
                {
                    <div class="muted center">Du er ikke en del af nogen √•bne sessioner.</div>
                }
                else
                {
                    <ul class="session-list">
                        @foreach (var s in sessions)
                        {
                            <li>
                                <button class="session-row @(selectedSessionId == s.SessionId ? "selected" : "")"
                                        title="V√¶lg denne session"
                                        type="button"
                                        @onclick="() => SelectSession(s.SessionId!)">
                                    <div class="row-top">
                                        <span class="title">@s.Title</span>
                                        <span class="status-pill">√Öben</span>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(s.RestaurantName))
                                    {
                                        <div class="sub muted">üìç @s.RestaurantName</div>
                                    }

                                    <div class="meta">
                                        <span>üë• @((s.Participants?.Count ?? 0))</span>
                                        <span>üç£ @s.TotalCount</span>
                                    </div>
                                </button>
                            </li>
                        }
                    </ul>
                }
            </div>

            <div class="modal-footer">
                <!-- ALTID klikbar; validering sker i AddToSession() -->
                <button class="btn btn-primary" type="button" @onclick="AddToSession">
                    Tilf√∏j
                </button>
                <button class="btn btn-secondary" type="button" @onclick="Close">Annull√©r</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnCommitted { get; set; }
    [Parameter] public string? CurrentUserId { get; set; }

    private bool loading = true;
    private string? error;
    private List<Session> sessions = new();
    private string? selectedSessionId;
    private string? selectedSessionName;
    private int selectedRating = 0; // 0 = ingen rating valgt

    protected override async Task OnParametersSetAsync()
    {
        if (!Visible) return;

        loading = true;
        error = null;
        sessions.Clear();
        selectedSessionId = null;
        selectedSessionName = null;

        try
        {
            var uid = CurrentUserId;
            if (string.IsNullOrWhiteSpace(uid))
            {
                var u = await UserService.GetUserLoggedInAsync();
                uid = u?.UserId;
            }

            if (string.IsNullOrWhiteSpace(uid))
            {
                error = "Du skal v√¶re logget ind.";
            }
            else
            {
                sessions = await SessionService.GetMyOpenSessionsAsync(uid!);
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private void SelectSession(string sessionId)
    {
        selectedSessionId = sessionId;
        selectedSessionName = sessions.FirstOrDefault(x => x.SessionId == sessionId)?.Title;
    }

    private async Task AddToSession()
    {
        // Kr√¶v kun valgt session (rating valgfri)
        if (string.IsNullOrWhiteSpace(selectedSessionId))
        {
            error = "V√¶lg en session f√∏rst.";
            return;
        }

        if (string.IsNullOrWhiteSpace(CurrentUserId))
        {
            var u = await UserService.GetUserLoggedInAsync();
            CurrentUserId = u?.UserId;
        }
        if (string.IsNullOrWhiteSpace(CurrentUserId))
        {
            error = "Du skal v√¶re logget ind.";
            return;
        }

        try
        {
            var ok = await ParticipantService.CommitLocalCountToSessionAsync(
                selectedSessionId!, CurrentUserId!, selectedRating == 0 ? (int?)null : selectedRating);

            if (!ok)
            {
                error = "Kunne ikke tilf√∏je dine data til sessionen.";
                return;
            }

            if (OnCommitted.HasDelegate)
                await OnCommitted.InvokeAsync();

            await Close();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private Task Close() => OnClose.InvokeAsync();
}
