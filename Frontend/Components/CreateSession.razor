@inject IFriendService FriendService
@inject ISessionService SessionService
@inject IParticipantService ParticipantService

@if (Visible)
{
    <div class="modal-backdrop" @onclick="Close">
        <div class="modal-content" @onclick:stopPropagation>
            <button class="close-button" @onclick="Close">X</button>

            <h3>
                @if (!IsEdit) { <text>Opret session</text> }
                else if (owner) { <text>Rediger session (ejer)</text> }
                else { <text>Se session</text> }
            </h3>

            @if (!string.IsNullOrWhiteSpace(error))
            {
                <div class="alert err">@error</div>
            }

            <div class="form-grid">
                <div class="form-row">
                    <label>Titel <span class="req">*</span></label>

                    @if (owner || !IsEdit)
                    {
                        <input class="input" @bind="title" placeholder="Fx Sushi aften hos Atami Herning" />
                    }
                    else
                    {
                        <div class="readonly-box">@title</div>
                    }
                </div>

                <div class="form-row">
                    <label>Restaurant</label>

                    @if (owner || !IsEdit)
                    {
                        <input class="input" @bind="restaurant" placeholder="Fx A+ Siam" />
                    }
                    else
                    {
                        <div class="readonly-box">@(string.IsNullOrWhiteSpace(restaurant) ? "‚Äî" : restaurant)</div>
                    }
                </div>

                <div class="form-row">
                    <label>Beskrivelse</label>

                    @if (owner || !IsEdit)
                    {
                        <textarea class="input" @bind="description" rows="3"></textarea>
                    }
                    else
                    {
                        <div class="readonly-box">@((string.IsNullOrWhiteSpace(description) ? "‚Äî" : description))</div>
                    }
                </div>

                @if (IsEdit && owner)
                {
                    <div class="form-row switch-row">
                        <label>Status</label>
                        <label class="switch">
                            <input type="checkbox" @bind="isActive" />
                            <span class="slider"></span>
                        </label>
                        <span class="switch-label">@(isActive ? "√Öben" : "Lukket")</span>
                    </div>
                }

                <div class="form-row">
                    <label>Deltagere</label>

                    <div class="participants-list">
                        @if (owner)
                        {
                            <div class="self-note">Du (ejer) er altid med.</div>

                            @if (friendsLoading)
                            {
                                <div class="muted">Henter venner‚Ä¶</div>
                            }
                            else if (friends.Count == 0)
                            {
                                <div class="muted">Du har ingen venner endnu.</div>
                            }
                            else
                            {
                                @foreach (var f in friends)
                                {
                                    <label class="checkbox-row">
                                        <input type="checkbox"
                                               checked="@IsSelected(f.UserId!)"
                                               @onchange="(e)=>ToggleSelect(f.UserId!, ((ChangeEventArgs)e).Value)" />
                                        <span>@f.Name</span>
                                    </label>
                                }
                            }

                            @if (IsEdit)
                            {
                                <div class="owner-actions">
                                    <button class="btn btn-danger-outline" @onclick="RemoveAllExceptOwner" disabled="@isSaving">Fjern alle (undtagen mig)</button>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="muted">Du kan ikke redigere deltagere som ikke-ejer.</div>
                        }

                        <!-- Ens visning for begge: Navn + üç£ Count -->
                        <div class="participant-summary">
                            @if (CurrentParticipants.Any())
                            {
                                @foreach (var item in CurrentParticipants)
                                {
                                    <div class="participant-row">
                                        <span class="p-name">
                                            @DisplayName(item.Id)
                                            @if (item.Id == CurrentUserId)
                                            {
                                                <span class="p-badge-you">dig</span>
                                            }
                                            @if (IsEdit && EditingSession?.CreatorId == item.Id)
                                            {
                                                <span class="p-badge-owner">ejer</span>
                                            }
                                        </span>
                                        <span class="p-count">üç£ @item.Count</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="muted">Ingen deltagere.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-buttons">
                @if (owner)
                {
                    @if (IsEdit)
                    {
                        <button class="btn btn-danger" @onclick="DeleteSession" disabled="@isSaving">Slet session</button>
                    }
                    <button class="btn btn-secondary" @onclick="Close" disabled="@isSaving">Annull√©r</button>
                    <button class="btn btn-primary" @onclick="Save" disabled="@isSaving">
                        @(IsEdit ? "Gem √¶ndringer" : "Opret")
                    </button>
                }
                else
                {
                    @if (IsEdit && CanRemoveSelf())
                    {
                        <button class="btn btn-danger-outline" @onclick="RemoveSelf" disabled="@isSaving">Fjern mig fra session</button>
                    }
                    <button class="btn btn-primary" @onclick="Close" disabled="@isSaving">Luk</button>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback OnCloseRequested { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }
    [Parameter] public string? CurrentUserId { get; set; }
    [Parameter] public Core.Session? EditingSession { get; set; } // null => create-mode

    private bool owner = false;

    private string title = "";
    private string? restaurant;
    private string? description;
    private bool isActive = true;

    private List<Core.User> friends = new();
    private bool friendsLoading = true;
    private Dictionary<string, bool> selected = new(); // friendId -> selected?
    private bool isSaving = false;
    private string? error;

    private bool IsEdit => EditingSession is not null;

    // Navne hentes KUN fra friends + "Du"
    private readonly Dictionary<string, string> friendNames = new();

    // Viewmodel i stedet for tuples (l√∏ser UserId-navneproblemet i Razor)
    private sealed class ParticipantRow
    {
        public string Id { get; set; } = "";
        public int Count { get; set; }
    }

    private List<ParticipantRow> CurrentParticipants => BuildCurrentParticipants();

    private string DisplayName(string id)
    {
        if (id == CurrentUserId) return "Du";
        return friendNames.TryGetValue(id, out var n) ? n : id;
    }

    protected override async Task OnParametersSetAsync()
    {
        owner = IsEdit
            ? (!string.IsNullOrWhiteSpace(EditingSession!.CreatorId) && EditingSession.CreatorId == CurrentUserId)
            : true; // ved oprettelse er man altid ejer

        // init felter
        if (IsEdit)
        {
            title = EditingSession!.Title;
            restaurant = EditingSession.RestaurantName;
            description = EditingSession.Description;
            isActive = EditingSession.IsActive;
        }
        else
        {
            title = "";
            restaurant = null;
            description = null;
            isActive = true;
        }

        // hent venner (navne + checkboxes)
        friendsLoading = true;
        friends = new List<Core.User>();
        selected = new Dictionary<string, bool>();
        friendNames.Clear();

        if (!string.IsNullOrWhiteSpace(CurrentUserId))
        {
            try
            {
                friends = await FriendService.GetFriends(CurrentUserId!);
            }
            catch
            {
                friends = new List<Core.User>();
            }
        }

        // udfyld navneopslag fra friends
        foreach (var f in friends)
        {
            if (!string.IsNullOrWhiteSpace(f.UserId))
                friendNames[f.UserId!] = f.Name;
        }

        friendsLoading = false;

        // preselect ved edit
        if (IsEdit)
        {
            var existingIds = EditingSession!.Participants?.Select(p => p.UserId).ToHashSet() ?? new HashSet<string>();
            foreach (var f in friends)
            {
                selected[f.UserId!] = existingIds.Contains(f.UserId!);
            }
        }
        else
        {
            // default: ingen venner valgt i create-mode
            foreach (var f in friends)
            {
                selected[f.UserId!] = false;
            }
        }
    }

    private bool IsSelected(string id) => selected.TryGetValue(id, out var v) && v;

    private void ToggleSelect(string id, object? val)
    {
        var on = false;
        if (val is bool b) on = b;
        else if (val is string s && bool.TryParse(s, out var b2)) on = b2;

        selected[id] = on;
    }

    private Task Close() => OnCloseRequested.InvokeAsync();

    private bool CanRemoveSelf()
        => IsEdit && EditingSession!.Participants?.Any(p => p.UserId == CurrentUserId) == true;

    private async Task RemoveSelf()
    {
        if (!IsEdit || string.IsNullOrWhiteSpace(CurrentUserId) || EditingSession?.SessionId is null) return;

        isSaving = true;
        try
        {
            await ParticipantService.RemoveParticipantAsync(EditingSession.SessionId!, CurrentUserId!);
            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task RemoveAllExceptOwner()
    {
        if (!owner || !IsEdit || EditingSession?.SessionId is null) return;

        isSaving = true;
        try
        {
            var others = EditingSession!.Participants
                ?.Where(p => p.UserId != CurrentUserId)
                .Select(p => p.UserId!)
                .ToList() ?? new();

            foreach (var uid in others)
            {
                await ParticipantService.RemoveParticipantAsync(EditingSession.SessionId!, uid);
            }

            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteSession()
    {
        if (!owner || !IsEdit || EditingSession?.SessionId is null) return;

        isSaving = true;
        try
        {
            var ok = await SessionService.DeleteSessionAsync(EditingSession.SessionId!);
            if (!ok)
            {
                error = "Kunne ikke slette sessionen.";
                return;
            }

            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task Save()
    {
        error = null;

        if (IsEdit && !owner)
        {
            error = "Du kan ikke redigere denne session.";
            return;
        }

        if (string.IsNullOrWhiteSpace(title))
        {
            error = "Du skal tilf√∏je en titel til sessionen.";
            return;
        }

        if (string.IsNullOrWhiteSpace(CurrentUserId))
        {
            error = "Du skal v√¶re logget ind.";
            return;
        }

        isSaving = true;

        try
        {
            if (!IsEdit)
            {
                // CREATE (du er ejer)
                var chosenFriendIds = selected.Where(kv => kv.Value).Select(kv => kv.Key).ToList();

                var participants = new List<Core.Participant>();
                participants.AddRange(chosenFriendIds.Select(fid =>
                    new Core.Participant { UserId = fid, Count = 0, Rating = null }));

                if (!participants.Any(p => p.UserId == CurrentUserId))
                {
                    participants.Add(new Core.Participant { UserId = CurrentUserId!, Count = 0, Rating = null });
                }

                var creation = new Core.Session
                {
                    Title = title.Trim(),
                    RestaurantName = string.IsNullOrWhiteSpace(restaurant) ? null : restaurant!.Trim(),
                    Description = string.IsNullOrWhiteSpace(description) ? null : description!.Trim(),
                    Participants = participants,
                    IsActive = true
                };

                await SessionService.AddSessionAsync(CurrentUserId!, creation);
            }
            else
            {
                // EDIT (kun ejer)
                var s = EditingSession!;
                s.Title = title.Trim();
                s.RestaurantName = string.IsNullOrWhiteSpace(restaurant) ? null : restaurant!.Trim();
                s.Description = string.IsNullOrWhiteSpace(description) ? null : description!.Trim();
                s.IsActive = isActive;

                var ok = await SessionService.UpdateSessionAsync(s);
                if (!ok)
                {
                    error = "Kunne ikke gemme √¶ndringer.";
                    return;
                }

                // Synk deltagere (ejer fjernes aldrig)
                var existing = s.Participants?.Select(p => p.UserId!).ToHashSet() ?? new HashSet<string>();
                if (!string.IsNullOrWhiteSpace(CurrentUserId))
                    existing.Add(CurrentUserId!);

                var nowSelected = selected.Where(kv => kv.Value).Select(kv => kv.Key).ToHashSet();

                var toAdd = nowSelected.Except(existing).ToList();
                var toRemove = existing
                    .Where(id => id != CurrentUserId)
                    .Except(nowSelected)
                    .ToList();

                foreach (var addId in toAdd)
                {
                    await ParticipantService.AddParticipantAsync(s.SessionId!, new Core.Participant
                    {
                        UserId = addId,
                        Count = 0,
                        Rating = null
                    });
                }

                foreach (var removeId in toRemove)
                {
                    await ParticipantService.RemoveParticipantAsync(s.SessionId!, removeId);
                }
            }

            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private List<ParticipantRow> BuildCurrentParticipants()
    {
        // Edit-mode: brug counts fra session.Participants (kilde-sandhed)
        if (IsEdit && EditingSession?.Participants is not null)
        {
            return EditingSession.Participants
                .Where(p => !string.IsNullOrWhiteSpace(p.UserId))
                .Select(p => new ParticipantRow { Id = p.UserId!, Count = Math.Max(0, p.Count) })
                .OrderByDescending(x => x.Count)
                .ThenBy(x => DisplayName(x.Id))
                .ToList();
        }

        // Create-mode: ejer + valgte venner (count = 0)
        var list = new List<ParticipantRow>();
        if (!string.IsNullOrWhiteSpace(CurrentUserId))
            list.Add(new ParticipantRow { Id = CurrentUserId!, Count = 0 });

        foreach (var kv in selected.Where(kv => kv.Value))
            list.Add(new ParticipantRow { Id = kv.Key, Count = 0 });

        return list
            .GroupBy(x => x.Id)
            .Select(g => g.First())
            .OrderBy(x => DisplayName(x.Id))
            .ToList();
    }
}
